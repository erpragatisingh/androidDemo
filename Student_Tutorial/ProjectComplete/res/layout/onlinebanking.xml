<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text=" Select a Bank: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="155dp"
            android:layout_height="fill_parent"
            android:autoLink="all"
            android:checked="true"
            android:text="http://www.icicibank.com/" android:textColor="#000066"/>

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="212dp"
            android:layout_height="fill_parent"
            android:autoLink="all"
            android:text="http://www.axisbank.com/" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="209dp"
            android:layout_height="fill_parent"
            android:autoLink="all"
            android:text="http://www.bankofindia.com/internetbank.aspx" />

    </RadioGroup>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_left3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Main Menu"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>